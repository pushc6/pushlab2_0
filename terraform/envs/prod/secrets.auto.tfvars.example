# Example Terraform secrets (DO NOT COMMIT the real one)

# SSH key material
# Public key (single line)
ssh_public_key = "ssh-ed25519 AAAA... your-public-key ..."

# Private key (multiline HEREDOC). Prefer using ssh-agent instead of embedding private keys.
ssh_private_key = <<EOF
-----BEGIN OPENSSH PRIVATE KEY-----
<your-private-key>
-----END OPENSSH PRIVATE KEY-----
EOF

# vSphere credentials
vsphere_user     = "<user>@vsphere.local"
vsphere_password = "<password>"

# Usage:
#   cp secrets.auto.tfvars.example secrets.auto.tfvars
#   terraform init && terraform apply -var-file=prod.tfvars
