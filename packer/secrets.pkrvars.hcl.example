# Example Packer secrets var-file (DO NOT COMMIT the real one)

# vCenter connection (required)
vcenter_server   = "<vcenter-host-or-ip>"
vcenter_username = "<username>"
vcenter_password = "<password>" # supply via -var-file at build time; do not commit real value

# SSH public key to embed in the template (recommended)
# Provide the content of your .pub key (single line)
ssh_public_key = "ssh-ed25519 AAAA... your-public-key ..."

# Optional: override template name (defaults to almalinux-10-minimal-template)
# template_name = "almalinux-10-minimal-template"

# Usage:
#   packer init packer
#   packer build -var-file=packer/secrets.pkrvars.hcl packer/alma-template.pkr.hcl
